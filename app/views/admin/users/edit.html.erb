<div class = "container">
  <div class = "row">
    <h4 class = "bg-light text-center px-4 my-4 "><%= @user.name %>さんの会員情報編集</h4>
  </div>

  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch  do |f| %>

  <div class = "row">
    <table>
        <tr>
          <th class = "font-weight-normal pr-5">会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">氏名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">会員ステータス</th>
          <td><%= f.radio_button :is_deleted, "false" %>
            <%= f.label :is_deleted, "有効" %>
            <%= f.radio_button :is_deleted, "true" %>
            <%= f.label :is_deleted, "退会" %>
          </td>
        </tr>
    </table>
  </div>
  <div class = "row mt-4 my-2">
    <div class = "col-md-2"></div>
    <div class = "col-md-3">
      <%= f.submit '変更を保存', class:"btn btn-warning" %>
    </div>
  <% end %>
  </div>
</div>
