<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center px-4 my-4 ">温泉情報編集</h4>
  </div>

  <div class = "row">
    <div class = "col-md-2"></div>
    <%= form_with model: @onsen, url: admin_onsen_path(@onsen.id) do |f| %>

      <table>
         <tr>
          <th class = "font-weight-normal pr-5">施設画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">施設名</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">住所</th>
          <td><%= f.text_field :address %></td>
        </tr>
         <tr>
          <th class = "font-weight-normal pr-5">営業時間</th>
          <td><%= f.text_field :opening_hours %></td>
        </tr>
         <tr>
          <th class = "font-weight-normal pr-5">料金</th>
          <td><%= f.text_field :price %></td>
        </tr>
         <tr>
          <th class = "font-weight-normal pr-5">泉質</th>
          <td><%= f.text_field :spring_quality %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">施設情報</th>
          <td><%= f.check_box :information_id, options_from_collection_for_select(Information.all, :id, :name) %></td>
        </tr>
      </table>
  </div>
  <div class = "row mt-4">
    <div class = "col-md-3"></div>
    <div class = "col-md-3">
      <a><%= f.submit '変更を保存', class:"btn btn-success px-4" %></a>
    </div>
  <% end %>
  </div>
</div>
