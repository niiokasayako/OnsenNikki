<div class = "container">
  <div class = "row my-2">
    <%= link_to :back do %>
      <button type="button" class="btn btn-outline-warning text-md-block px-2 m-3">＜ 戻る</button>
      <% end %>
  </div>

  <div class = "row">
    <div class = "col-md-2"></div>
    <h4 class ="bg-light text-center px-4 my-4 mb-5" >温泉情報新規登録</h4>
  </div>

  <% if @onsen.errors.any? %>
    <ul class="alert alert-anger" role="alert">
     <h6 class="alert-heading">
      <%= @onsen.errors.count %>件のエラーが発生しました
     </h6>
     <% @onsen.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>

  <div class = "row">
    <div class = "col-md-2"></div>
     <%= form_with model: @onsen, url: '/admin/onsens', method: :post do |f| %>
      <table>
        <tr>
          <th class = "font-weight-normal pr-5">施設名</th>
          <td><%= f.text_field :name, class:"w-100" %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">住所</th>
          <td><%= f.text_field :address, class:"w-100" %></td>
        </tr>
         <tr>
          <th class = "font-weight-normal pr-5">営業時間</th>
          <td><%= f.text_field :opening_hours, class:"w-100" %></td>
        </tr>
         <tr>
          <th class = "font-weight-normal pr-5">料金</th>
          <td><%= f.text_field :price, class:"w-100" %></td>
        </tr>
         <tr>
          <th class = "font-weight-normal pr-5">泉質</th>
          <td><%= f.text_field :spring_quality, class:"w-100" %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">施設情報</th>
          <td><%= f.collection_check_boxes :information_ids, Information.all, :id, :name %></td>
        </tr>
      </table>

        <div class ="actions ">
          <p><%= f.submit '新規登録', class:"btn btn-warning px-5 m-3 " %></p>
        </div>
      <% end %>

    <div class = "col-md-2"></div>
  </div>

</div>
