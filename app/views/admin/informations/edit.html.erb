<div class = "container">
  <div class = "row mb-5">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center px-4 my-4 ">施設情報カテゴリ編集</h4>
  </div>

  <div class = "row">
    <%= form_with model: @information, url: admin_information_path(@information.id) do |f| %>

      <div class = "field py-5">
        <b class ="font-weight-normal pr-5">施設情報カテゴリ名</b>
        <%= f.text_field :name %>
         <span class ="pr-5"></span>
        <a><%= f.submit '変更を保存', class:"btn btn-success" %></a>
      </div>
    <% end %>
  </div>
</div>


