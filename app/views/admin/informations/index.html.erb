<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center px-4 my-4 ">施設情報一覧・追加</h4>
    </div>

    <div class = "row">
       <%= form_with model: @information, url: '/admin/informations', method: :post do |f| %>
          <div class="field my-4">
              <b class ="pr-5 ">施設情報カテゴリ名</b>
                <%= f.text_field :name %>
              <a>
                <%= f.submit "新規登録", class:"btn btn-success px-5 m-3" %>
              </a>
          </div>
      <% end %>
      </div>

  <div class = "row">
    <div class = "col-md-5">
        <table class ="table border-bottom ">
      <thead class = "table-active">
        <tr>
            <th>施設情報カテゴリ名</th>
            <th></th>
        </tr>
      </thead>

      <tbody>
                <% @informations.each do |information| %>
                    <tr>
                        <td>
                            <%= information.name %>
                        </td>
                        <td>
                           <%= link_to edit_admin_information_path(information.id) do %>
                             <button type="button" class="btn btn-success text-md-block">編集する</button>
　                         <% end %>
                         </td>
                    </tr>
                <% end %>
        </tbody>
      </table>
      </div>
  </div>
  </div>