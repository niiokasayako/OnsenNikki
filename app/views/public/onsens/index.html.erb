<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center w-25 pt-2 my-4 ">温泉一覧</h4>
  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <div class="search_form">
      <%= form_with model: @onsen, url: search_public_onsens_path, local: true, method: :get do |f| %>
        <%= f.text_field :address, placeholder: "地名検索" %><br>
        <%= f.label :informations, "絞り込み検索", class:"m-xl-1" %><br>
        <%= f.collection_check_boxes :informations, Information.all, :id, :name, include_hidden: false %><br>
        <%= f.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <table class= "col-md-10 table border-bottom">
      <thead class = "table-active">
        <tr>
          <th>施設名</th>
          <th>住所</th>
          <th>営業時間</th>
          <th>施設情報</th>
        </tr>
      </thead>

      <tbody>
        <% @onsens.each do |onsen| %>
          <tr>
            <td>
              <%= link_to public_onsen_path(onsen.id) do %>
                <%= onsen.name %>
              <% end %>
            </td>
            <td><%= onsen.address %></td>
            <td><%= onsen.opening_hours %></td>
            <td>
              <% onsen.informations.each do |information| %>
            <%= information.name %>
          <% end %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


