<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "bg-light text-center w-25 pt-2 my-4 ">温泉一覧</h4>
  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <table class= "col-md-10 table border-bottom">
      <thead class = "table-active">
        <tr>
          <th>施設名</th>
          <th>住所</th>
          <th>営業時間</th>
        </tr>
      </thead>

      <tbody>
        <% @onsens.each do |onsen| %>
          <tr>
            <td>
              <%= link_to public_onsen_path(onsen.id) do %>
                <%= onsen.name %>
              <% end %>
            </td>
            <td><%= onsen.address %></td>
            <td><%= onsen.opening_hours %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


