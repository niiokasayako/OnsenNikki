<div class = "container">
  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "border-bottom w-75 pt-2 my-4 ">日記　新規投稿<h4>
  </div>

  <div class = "row-md-11">
    <div class = "col-md-2"></div>
     <%= form_with model: [@onsen, @review], url: public_onsen_reviews_path, local: true, method: :post do |f| %>
      <table class = "mx-auto">
        <tr>
          <th></th>
          <td><%= f.text_area :review, class: 'form-control',size: "60x5" %></td>
        </tr>
      </table>

      <div class="field text-center pt-3" id="star">
        <%= f.label :rate, "評価：" %>
        <%= f.hidden_field :rate, id: :review_star %>
        <script>
          $('#star').raty({
            size     : 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'review[rate]',
            half: true,
          });
        </script>
      </div>

        <div class ="text-center">
          <p><%= f.submit '新規登録', class:"btn btn-warning rounded-pill px-5 m-3 " %></p>
        </div>
      <% end %>
    <div class = "col-md-2"></div>
  </div>

</div>

