<div class = "container vh-100">

  <div class = "row">
    <div class = "col-md-1"></div>
      <%= link_to :back do %>
        <button type="button" class="btn btn-outline-warning rounded-pill text-md-block px-4 m-3">＜ 戻る</button>
      <% end %>
  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <h4 class = "border-bottom w-75 pt-2 my-4 ">会員情報編集<h4>
  </div>

  <div class = "row">
    <div class = "col-md-1"></div>
    <%= form_with model: @user, url: public_users_information_path do |f| %>
      <table>
        <tr>
          <th class = "font-weight-normal pr-5">お名前</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class = "font-weight-normal pr-5">メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
  </div>
  
  <div class = "row mt-5">
    <div class = "col-md-2"></div>
    <div class>
      <a><%= f.submit '編集内容を保存', class:"btn btn-warning rounded-pill px-5" %></a>
    </div>
  <% end %>
    <div class = "col-md-2"></div>
    <div>
      <%= link_to public_users_unsubscribe_path, class:'btn btn-secondary rounded-pill px-5' do %>
        退会する
      <% end %>
    </div>
  </div>
</div>


